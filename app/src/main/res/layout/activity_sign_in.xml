<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dinoapps.flattingplus.SignInActivity">

    <TextView
        android:text="Sign In Using Google"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/activity_sign_in"
        app:layout_constraintTop_toTopOf="@+id/activity_sign_in"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_sign_in" />

    <Button
        android:text="Sign In"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="60dp"
        android:id="@+id/buttonSignIn"
        app:layout_constraintLeft_toLeftOf="@+id/activity_sign_in"
        app:layout_constraintRight_toRightOf="@+id/activity_sign_in" />
</android.support.constraint.ConstraintLayout>
